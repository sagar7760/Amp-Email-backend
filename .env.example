# Environment Configuration
NODE_ENV=production
PORT=3000

# Server URL (CRITICAL for AMP emails - will be set by Render)
SERVER_URL=https://your-app.onrender.com

# Database
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/amp-email-db?retryWrites=true&w=majority

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_POOL=true
SMTP_MAX_CONNECTIONS=5
SMTP_MAX_MESSAGES=200
SMTP_CONNECTION_TIMEOUT=15000
SMTP_GREETING_TIMEOUT=10000
SMTP_SOCKET_TIMEOUT=20000
SMTP_REQUIRE_TLS=true
SMTP_IP_FAMILY=4
SMTP_DEBUG=false
SMTP_ALLOW_INVALID_CERTS=false
SMTP_TLS_SERVERNAME=smtp.gmail.com

# CORS Origins (for frontend if needed)
FRONTEND_URL=https://your-frontend-domain.com

# Application Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AMP Email Settings
AMP_SUPPORTED_DOMAINS=gmail.com,googlemail.com,yahoo.com,mail.ru
